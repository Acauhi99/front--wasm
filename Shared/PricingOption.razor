@code {
    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Price { get; set; } = "";

    [Parameter]
    public bool IsPopular { get; set; } = false;

    [Parameter]
    public string HoverBorderColor { get; set; } = "border-blue-500";

    [Parameter]
    public EventCallback OnClick { get; set; }
}

<div class="border border-gray-200 rounded-lg p-4 hover:@HoverBorderColor cursor-pointer transition @(IsPopular ? "bg-blue-50" : "")">
    <div class="flex justify-between items-center">
        <div>
            <span class="font-bold">@Title</span>
            @if (IsPopular)
            {
                <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full ml-2">Mais Popular</span>
            }
        </div>
        <span class="text-xl font-bold">@Price</span>
    </div>
</div>
