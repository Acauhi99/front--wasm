@code {
    [Parameter] 
    public string ImageUrl { get; set; } = "";

    [Parameter] 
    public string ImageAlt { get; set; } = "";

    [Parameter] 
    public string Title { get; set; } = "";

    [Parameter] 
    public string Description { get; set; } = "";

    [Parameter]
    public string DetailsUrl { get; set; } = "";

    [Parameter] 
    public string GlowColor { get; set; } = "#f1c533";
}

<div class="relative bg-gray-800 rounded-lg overflow-hidden shadow-lg transition duration-300 hover:scale-105"
     onmouseover="this.style.boxShadow = '0 0 20px @GlowColor'; this.style.borderColor = '@GlowColor'; this.style.borderWidth = '2px'; this.style.borderStyle = 'solid';"
     onmouseout="this.style.boxShadow = ''; this.style.border = '';">
  <img 
    src="@ImageUrl" 
    alt="@ImageAlt" 
    class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-serif text-white mb-2">@Title</h3>
    <p class="text-gray-300">@Description</p>
    <div class="flex justify-between items-center">
      <a
        href="@DetailsUrl"
        class="hover:text-[#f1c533] transition text-white font-bold py-2 "
        >Saiba Mais â†’
        </a>
    </div>

  </div>
</div>
