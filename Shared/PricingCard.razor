@code {
    [Parameter]
    public string Title { get; set; } = "Escolha seu pacote";

    [Parameter]
    public string HoverBorderColor { get; set; } = "border-blue-500";

    [Parameter]
    public RenderFragment? PricingOptions { get; set; }

    [Parameter]
    public EventCallback OnAddToCart { get; set; }

    [Parameter]
    public EventCallback OnBuyNow { get; set; }
}

<div class="bg-[#2d2d25] rounded-lg shadow-lg p-8 border border-gray-700">
    <h3 class="text-2xl font-bold mb-6 text-center text-gray-200">@Title</h3>
    <div class="space-y-4">
        @PricingOptions
    </div>
    <ProductActions OnAddToCart="OnAddToCart" OnBuyNow="OnBuyNow" />
</div>
