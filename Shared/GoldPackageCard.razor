@code {
    [Parameter]
    public int GoldAmount { get; set; }

    [Parameter]
    public double Price { get; set; }

    [Parameter]
    public bool IsPopular { get; set; }

    [Parameter]
    public EventCallback OnAddToCart { get; set; }
}

<div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 cursor-pointer transition @((IsPopular ? "bg-blue-50" : ""))">
    <div class="flex justify-between items-center">
        <div>
            <span class="font-bold">@GoldAmount Gold</span>
            @if (IsPopular)
            {
                <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full ml-2">Mais Popular</span>
            }
        </div>
        <span class="text-xl font-bold">R$ @Price</span>
    </div>
    <button
        class="mt-4 w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition"
        @onclick="OnAddToCart">
        Adicionar ao Carrinho
    </button>
</div>