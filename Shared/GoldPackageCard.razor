@code {
    [Parameter]
    public int GoldAmount { get; set; }

    [Parameter]
    public double Price { get; set; }

    [Parameter]
    public bool IsPopular { get; set; }

    [Parameter]
    public EventCallback OnSelect { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    [Parameter]
    public EventCallback<int> OnPackageSelected { get; set; } // Notify parent of selection

    [Parameter]
    public int PackageId { get; set; } // Unique ID for each package
}

<div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 cursor-pointer transition @(IsSelected ? "border-blue-500 bg-orange-200" : "")"
     @onclick="() => OnPackageSelected.InvokeAsync(PackageId)">
    <div class="flex justify-between items-center">
        <div>
            <span class="font-bold">@GoldAmount Gold</span>
            @if (IsPopular)
            {
                <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full ml-2">Mais Popular</span>
            }
        </div>
        <span class="text-xl font-bold">R$ @Price</span>
    </div>
</div>