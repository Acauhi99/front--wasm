@using front__wasm.Models

@code {
  [Parameter]
  public bool IsVisible { get; set; }

  [Parameter]
  public SellCreateResponse? SellData { get; set; }

  [Parameter]
  public EventCallback OnClose { get; set; }

  [Parameter]
  public EventCallback OnViewOrders { get; set; }

  private bool isRendered = false;
  private string dialogClasses => IsVisible
  ? "transform scale-100 opacity-100"
  : "transform scale-95 opacity-0";
  private string backdropClasses => IsVisible
  ? "opacity-100"
  : "opacity-0";

  protected override void OnParametersSet()
  {
    if (IsVisible)
    {
      isRendered = true;
    }
    else if (!IsVisible && isRendered)
    {
      isRendered = false;
    }
  }
}

@if (isRendered)
{
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4" @onclick="OnClose">
    <div class="absolute inset-0 backdrop-blur-md bg-black/50 transition-opacity duration-300 ease-out @backdropClasses">
    </div>

    <div class="relative bg-[#2d2d25] text-gray-200 rounded-lg p-6 md:p-8 w-full max-w-lg mx-auto shadow-2xl border border-gray-700 z-10
                                            transition-all duration-300 ease-out @dialogClasses"
      @onclick:stopPropagation>

      <div class="flex flex-col items-center text-center">
        <div class="w-20 h-20 md:w-24 md:h-24 rounded-full bg-green-900/30 flex items-center justify-center mb-4 md:mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 md:h-14 md:w-14 text-green-500" fill="none"
            viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>

        <h3 class="text-xl md:text-2xl font-bold mb-2 md:mb-3">Pedido Confirmado!</h3>

        @if (SellData != null)
        {
          <div class="mb-6 text-left w-full">
            <div class="bg-[#1e1e18] p-4 rounded-lg mb-4">
              <p class="text-gray-400 text-sm">Código do Pedido:</p>
              <p class="font-mono font-bold text-white">@SellData.Id</p>
            </div>

            <p class="text-gray-300 mb-2">Método de Pagamento: <span class="font-medium">@SellData.PaymentMethod</span></p>
            <p class="text-gray-300 mb-2">Total: <span class="font-medium">R$ @SellData.Amount.ToString("F2")</span></p>

          </div>
        }
        else
        {
          <p class="mb-6 text-gray-300">Seu pedido foi registrado com sucesso.</p>
        }

        <div class="flex flex-col sm:flex-row gap-4 w-full">
          <button @onclick="OnViewOrders"
            class="px-6 py-2 md:px-8 md:py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition cursor-pointer shadow-lg hover:shadow-blue-500/30 focus:outline-none focus:ring-2 focus:ring-blue-500 flex-1">
            Ver Meus Pedidos
          </button>
          <button @onclick="OnClose"
            class="px-6 py-2 md:px-8 md:py-3 bg-gray-700 hover:bg-gray-800 text-white rounded-lg transition cursor-pointer shadow-lg focus:outline-none focus:ring-2 focus:ring-gray-500 flex-1">
            Voltar à Loja
          </button>
        </div>
      </div>
    </div>
  </div>
}
