@page "/catalog"

<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold mb-8 text-center">Catálogo de Serviços</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Gold -->
    <div class="bg-white rounded-lg overflow-hidden shadow-lg border border-gray-200">
      <img
        src="https://via.placeholder.com/600x300?text=Gold+Services"
        alt="Gold Services"
        class="w-full h-48 object-cover" />
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">Gold Services</h2>
        <p class="text-gray-600 mb-4">Adquira ouro rapidamente para suas necessidades no jogo.</p>
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold">A partir de R$ 19,90</span>
          <a
            href="/gold"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Ver detalhes</a
          >
        </div>
      </div>
    </div>

    <!-- Dungeons -->
    <div class="bg-white rounded-lg overflow-hidden shadow-lg border border-gray-200">
      <img
        src="https://via.placeholder.com/600x300?text=Dungeon+Runs"
        alt="Dungeon Runs"
        class="w-full h-48 object-cover" />
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">Mythic+ Dungeons</h2>
        <p class="text-gray-600 mb-4">
          Complete desafios de masmorras com nossa equipe experiente.
        </p>
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold">A partir de R$ 49,90</span>
          <a
            href="/dungeons"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Ver detalhes</a
          >
        </div>
      </div>
    </div>

    <!-- Raids -->
    <div class="bg-white rounded-lg overflow-hidden shadow-lg border border-gray-200">
      <img
        src="https://via.placeholder.com/600x300?text=Raid+Boosting"
        alt="Raid Boosting"
        class="w-full h-48 object-cover" />
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">Raid Boosting</h2>
        <p class="text-gray-600 mb-4">Conquiste as raids mais desafiadoras com nossa ajuda.</p>
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold">A partir de R$ 89,90</span>
          <a
            href="/raids"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Ver detalhes</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
