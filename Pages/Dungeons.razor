@page "/dungeons"
@using front__wasm.Models
@using front__wasm.Services
@inject DungeonService DungeonService

@if (details == null)
{
    <p class="text-center text-white py-10">Carregando detalhes do serviço...</p>
}
else
{
    <ServiceTemplate 
      Title="@details.Title" 
      Description="@details.Description"
      GradientClasses="@gradientClasses"
      IconColor="@iconColor"
      HoverBorderColor="@hoverBorderColor">
      <ServiceFeatures>
        <h2 class="text-3xl font-bold mb-6">O que nosso serviço de Mythic+ oferece?</h2>
        <ul class="space-y-4">
          @foreach (var feature in details.Features)
          {
            <CheckListItem Text="@feature" IconColor="@iconColor" />
          }
        </ul>
      </ServiceFeatures>
      <ServiceDetails>
        <h3 class="text-2xl font-bold mb-4">Como funciona?</h3>
        <ol class="list-decimal pl-5 space-y-2">
          @foreach (var step in details.HowItWorks)
          {
            <li>@step</li>
          }
        </ol>
      </ServiceDetails>
      <PackageSelector>
        <h3 class="text-2xl font-bold mb-6 text-center text-gray-200">Escolha seu pacote</h3>
        <div class="space-y-4">
          @foreach (var package in details.Packages)
          {
            var iconColorParts = iconColor.Split('-'); // Use static iconColor
            var colorName = iconColorParts.Length > 1 ? iconColorParts[1] : "gray"; 
            var selectedBgClass = $"bg-{colorName}-600/30";
            var popularBgClass = $"bg-{colorName}-600/20";
            var defaultBgClass = "bg-[#2d2d25]";

            var backgroundClass = selectedPackage == package 
                                    ? selectedBgClass 
                                    : (package.IsPopular ? popularBgClass : defaultBgClass);

            <div
              @onclick="() => SelectPackage(package)"
              class="rounded-lg p-4 cursor-pointer transition border border-gray-700 hover:@hoverBorderColor @backgroundClass">
              <div class="flex justify-between items-center">
                <div>
                  <span class="font-bold text-gray-200">@package.Name</span>
                  @if (package.IsPopular)
                  {
                    <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full ml-2">Mais Popular</span>
                  }
                </div>
                <span class="text-xl font-bold text-gray-200">@package.Price</span>
              </div>
            </div>
          }
        </div>
      </PackageSelector>
      <ActionButtons>
        <button
          @onclick="@(() => Console.WriteLine("Add to cart"))"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300 mb-4">
          Adicionar ao Carrinho
        </button>
        <button
          @onclick="@(() => Console.WriteLine("Buy now"))"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300">
          Comprar Agora
        </button>
      </ActionButtons>
    </ServiceTemplate>
}

@code {
    private DungeonServiceDetails? details;
    private Package? selectedPackage;
    private string gradientClasses = "from-blue-600 to-indigo-800";
    private string iconColor = "text-blue-500";
    private string hoverBorderColor = "border-indigo-500";

    protected override async Task OnInitializedAsync()
    {
        details = await DungeonService.GetDungeonDetailsAsync();
    }

    private void SelectPackage(Package package)
    {
        selectedPackage = package;
    }
}
